<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Storyboard pre Rozrez-->
    <Storyboard x:Key="stbTransRedBorder">
        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                      Duration="0:0:2"
                                                      FillBehavior="HoldEnd"
                                                      RepeatBehavior="Forever">
            <DiscreteColorKeyFrame KeyTime="0:0:0" Value="{StaticResource redColor}"/>
            <DiscreteColorKeyFrame KeyTime="0:0:1" Value="{StaticResource transparentColor}"/>
        </ColorAnimationUsingKeyFrames>
    </Storyboard>
    
    
</ResourceDictionary>