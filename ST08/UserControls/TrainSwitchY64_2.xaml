        Fill="LightGray"
        Stroke="Black"
        -->
        <Path Style="{StaticResource RozrezStyle}" x:Name="RozrezY1_64_2" Data="M3.5071707,2.0104999 L14.954716,12.81566 32.014454,21.203323 29.226846,28.041114 8.6746853,19.175151 -2.7972159,8.1633734 z" 
