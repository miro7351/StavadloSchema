                            <GeometryDrawing.Pen>
                                <Pen LineJoin="Round" Brush="{Binding LocomotiveBrush, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay, FallbackValue=Yellow}"/>
