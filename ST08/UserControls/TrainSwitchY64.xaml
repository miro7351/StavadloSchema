                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
        </Grid>
        <Path x:Name="RozrezY2_64" Data="M39.794761,23.715253 L39.774502,15.194692 29.251997,15.250581 15.657186,2.7814412 10.355598,8.5852774 27.790232,24.208652 z" Fill="{DynamicResource vylukaPrestaveniaBrush}" HorizontalAlignment="Left" Height="23.425" Margin="7.099,6.864,0,0" Stretch="Fill" Stroke="{DynamicResource vylukaPrestaveniaBrush}" StrokeThickness="2" VerticalAlignment="Top" Width="31.807"/>
