                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
            <Path Style="{StaticResource variantStyle}" x:Name="Path3" Data="M49.4473,29.844786 L34.916308,29.600919 18.870345,14.887213" Fill="Transparent" HorizontalAlignment="Right" Margin="0,14.481,-1.057,18.801" Stretch="Fill" Stroke="Black" StrokeThickness="2" Width="32.583" />
