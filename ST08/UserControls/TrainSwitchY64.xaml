        <!--Pre Runtime
        Fill="{DynamicResource vylukaPrestaveniaBrush}" 
         Stroke="{DynamicResource vylukaPrestaveniaBrush}"
        V Designe mode
        Fill="LightGray"
        Stroke="Black"
        -->
        <Path Style="{StaticResource RozrezStyle}" x:Name="RozrezY1_64" Data="M3.3892936,2.1263956 L14.601085,13.163346 32.014454,21.203323 29.226846,28.041114 8.5747359,19.066545 -2.4435819,7.8156868 z" 
            Fill="{DynamicResource vylukaPrestaveniaBrush}" Margin="0.108,14.943,13.442,6.705" RenderTransformOrigin="0.73313046142258,0.755141832065706" Stretch="Fill" 
