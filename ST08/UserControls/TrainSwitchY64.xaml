                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
            <!-- Spodna hokejka-->
            <Path Style="{StaticResource variantStyle}" x:Name="Path3" Data="M46.500037,29.505524 L34.470995,28.579833 13.78921,21.376454" Fill="Transparent" HorizontalAlignment="Right" Margin="0,23.796,9.104,16.204" Stretch="Fill" Stroke="Black" StrokeThickness="2" Width="34.723" RenderTransformOrigin="0.5,0.5" >
