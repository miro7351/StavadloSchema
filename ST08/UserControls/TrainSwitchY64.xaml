        </Path>
        <Path Style="{StaticResource RamenaStyle}" x:Name="RamenoY1_64" Data="M5.9687847,0.24919319 L21.140738,0.28823054 21.17218,8.3143533 1.4575339,9.2916769 z" Fill="{DynamicResource BlueBrush}" HorizontalAlignment="Right" Height="11.037" Margin="0,0,-1.491,10.571" RenderTransformOrigin="-0.0425238692696327,0.500000038743017" Stretch="Fill" Stroke="{DynamicResource BlueBrush}" StrokeThickness="2"
